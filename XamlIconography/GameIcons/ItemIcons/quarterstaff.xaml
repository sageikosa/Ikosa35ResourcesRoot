<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Canvas Width="96" Height="96" Background="Violet">
    <Rectangle Canvas.Left="45.5" Canvas.Top="8" Stroke="Black" Width="5" Height="80" RadiusX="1" RadiusY="4">
      <Rectangle.Fill>
        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
          <GradientStop Offset="0" Color="Brown"/>
          <GradientStop Offset="0.5" Color="Tan"/>
          <GradientStop Offset="1" Color="Brown"/>
        </LinearGradientBrush>
      </Rectangle.Fill>
    </Rectangle>
  </Canvas>
</Page>