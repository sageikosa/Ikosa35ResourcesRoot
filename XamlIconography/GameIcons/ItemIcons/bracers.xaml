<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Canvas Height="96" Width="96" Background="Violet">
    <Canvas.Resources>
        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5" x:Key="fillBracer">
          <GradientStop Color="Goldenrod" Offset="0"/>
          <GradientStop Color="Yellow" Offset="0.25"/>
          <GradientStop Color="LightYellow" Offset="0.5"/>
          <GradientStop Color="Yellow" Offset="0.75"/>
          <GradientStop Color="Goldenrod" Offset="1"/>
        </LinearGradientBrush>
    </Canvas.Resources>
    <Grid Height="96" Width="96">
      <Path Stroke="Black" Fill="LightGoldenrodYellow" StrokeEndLineCap="Round" StrokeLineJoin="Round"
            Data="M32,17 l4,64 a24,24,0,0,0,24,0 l4,-64 z" RenderTransform="{RotateTransform Angle=-22.5,CenterX=48,CenterY=48}"/>
      <Path Stroke="Black" Fill="{StaticResource fillBracer}" StrokeEndLineCap="Round" StrokeLineJoin="Round"
            Data="M32,16 l4,64 a24,24,0,0,1,24,0 l4,-64 a32,24,0,0,0,-32,0 z" RenderTransform="{RotateTransform Angle=-22.5,CenterX=48,CenterY=48}"/>
      <Path Stroke="Black" Fill="LightGoldenrodYellow" StrokeEndLineCap="Round" StrokeLineJoin="Round"
            Data="M32,17 l4,64 a24,24,0,0,0,24,0 l4,-64 z" RenderTransform="{RotateTransform Angle=45,CenterX=48,CenterY=48}"/>
      <Path Stroke="Black" Fill="{StaticResource fillBracer}" StrokeEndLineCap="Round" StrokeLineJoin="Round"
            Data="M32,16 l4,64 a24,24,0,0,1,24,0 l4,-64 a32,24,0,0,0,-32,0 z" RenderTransform="{RotateTransform Angle=45,CenterX=48,CenterY=48}"/>
    </Grid>
  </Canvas>
</Page>