<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Canvas Height="96" Width="96" Background="Violet">
    <Ellipse Stroke="Black" Width="80" Height="80" Canvas.Left="8" Canvas.Top="8">
      <Ellipse.Fill>
        <RadialGradientBrush>
          <GradientStop Color="LightYellow" Offset="0"></GradientStop>
          <GradientStop Color="Yellow" Offset="0.5"></GradientStop>
          <GradientStop Color="Orange" Offset="0.75"></GradientStop>
          <GradientStop Color="Red" Offset="1"></GradientStop>
        </RadialGradientBrush>
      </Ellipse.Fill>
    </Ellipse>
  </Canvas>
</Page>